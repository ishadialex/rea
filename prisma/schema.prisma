generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model TeamMember {
  id        String   @id @default(cuid())
  name      String
  role      String
  image     String
  instagram String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Testimonial {
  id          String   @id @default(cuid())
  name        String
  designation String
  content     String
  image       String
  star        Int      @default(5)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model InvestmentOption {
  id            String   @id @default(cuid())
  title         String
  image         String
  minInvestment String
  description   String
  link          String
  order         Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
